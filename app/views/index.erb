<h1>Welcome to Flash Cards</h1>
<h2>Pick a deck:</h2>

<div id="deck">
  <ol>
    <% @deck.each do |deck| %>
      <li> 
        <a href="/deck/<%= deck.id %>"><%= deck.name %></a>
      </li>
    <% end %>
  </ol>
  <% if current_user %>
    <form id="logout-button" method="GET" action="/logout">
      <input id="logout" type="submit" value="logout">
    </form>
      <span>Logged in as: <%= User.find(current_user).username %></span>
    <form method="GET" action="/history">
      <input id="history" type="submit" value="history">
    </form>
  <% else %>
    <%= erb :_login %>
    <%= erb :_signup %>
  <% end %>
</div>

